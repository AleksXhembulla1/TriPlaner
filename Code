document.getElementById('getStartedButton').addEventListener('click', function() {
    var welcomeScreen = document.getElementById('welcomeScreen');
    welcomeScreen.style.opacity = '0'; 

    setTimeout(function() {
        welcomeScreen.style.display = 'none'; 
        document.querySelector('.tab-nav').style.display = 'flex'; 
        openTab('Home'); 
    }, 600); 
});




document.querySelectorAll('.map-container').forEach(container => {
    container.addEventListener('click', function(event) {
        event.stopPropagation(); 
    });
});
function toggleCard(cardElement, mapElementId, coords) {
    cardElement.classList.toggle('is-flipped');
    
    if (cardElement.classList.contains('is-flipped') && !cardElement.classList.contains('map-initialized')) {
        initMap(mapElementId, coords);
        cardElement.classList.add('map-initialized');
    }
}


function initMap(mapElementId, coords) {
    new ol.Map({
        target: mapElementId,
        layers: [
            new ol.layer.Tile({
                source: new ol.source.OSM()
            })
        ],
        view: new ol.View({
            center: ol.proj.fromLonLat(coords),
            zoom: 17
        })
    });
}

function openTab(tabId) {
    var tabs = document.getElementsByClassName('tabcontent');
    for (var i = 0; i < tabs.length; i++) {
        tabs[i].style.display = 'none';
    }

    var activeTab = document.getElementById(tabId);
    activeTab.style.display = 'block';
    if (tabId === 'Recommendations') {
        document.body.classList.add('recommendations-active');
    } else {
        document.body.classList.remove('recommendations-active');
    }
}




    

    
document.querySelector('.tab-nav').style.display = 'none'; 
function filterAttractions(category) {
    var contents = document.querySelectorAll('.attractions-content');

    contents.forEach(function(content) {
        content.style.display = 'none';
        content.classList.remove('active');
    });

    
    var selectedContent = document.getElementById(category);
    if (selectedContent) {
        selectedContent.style.display = 'block';
        selectedContent.classList.add('active');
    }
}




function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    var droppedElement = document.getElementById(data);
    var dropTarget = ev.target.closest('.itinerary-slot'); 
    if (dropTarget) {
        dropTarget.appendChild(droppedElement);
        droppedElement.classList.add('activity-dropped'); 
        setTimeout(() => droppedElement.classList.remove('activity-dropped'), 500); 
      }
    }

function openDay(dayId) {
    var days = document.getElementsByClassName('itinerary-day');
    for (var i = 0; i < days.length; i++) {
        days[i].style.display = 'none';
    }
    document.getElementById(dayId).style.display = 'block';
}

document.addEventListener('DOMContentLoaded', function() {
    openDay('Monday');
});

document.addEventListener('DOMContentLoaded', function() {
    
    
    
    document.getElementById('downloadItinerary').addEventListener('click', downloadItinerary);
});

function downloadItinerary() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();

    
    const logoUrl = 'images/logo.png'; 
    let imgData;
    const xhr = new XMLHttpRequest();
    xhr.open('GET', logoUrl, true);
    xhr.responseType = 'blob';
    xhr.onload = function() {
        const reader = new FileReader();
        reader.readAsDataURL(xhr.response);
        reader.onloadend = function() {
            imgData = reader.result;
            generatePDF(doc, imgData);
        };
    };
    xhr.send();
}

function generatePDF(doc, logoData) {
    const pageHeight = doc.internal.pageSize.getHeight();
    const pageWidth = doc.internal.pageSize.getWidth();

    doc.addImage(logoData, 'PNG', 0, 0, pageWidth, 50); 

    let yPos = 70; 

    doc.setFont('times'); 

    document.querySelectorAll('.itinerary-day').forEach(function(day) {
        let activities = day.querySelectorAll('.itinerary-slot .activity');
        if (activities.length > 0) {
            let dayName = day.querySelector('h3').textContent;
            doc.setFontSize(16); 
            doc.setFont(undefined, 'bold'); 
            let titleWidth = doc.getTextWidth(dayName);
            doc.text(dayName, (pageWidth - titleWidth) / 2, yPos); 
            yPos += 10; 

            doc.setFontSize(12); 
            doc.setFont(undefined, 'normal'); 

            activities.forEach(function(activity) {
                if (yPos >= pageHeight - 10) { 
                    doc.addPage();
                    yPos = 20; 
                }
                let activityText = '- ' + activity.textContent.trim();
                let activityWidth = doc.getTextWidth(activityText);
                doc.text(activityText, (pageWidth - activityWidth) / 2, yPos); 
                yPos += 10; 
            });

            yPos += 10; 
        }
    });

    doc.save('itinerary.pdf'); 
}



