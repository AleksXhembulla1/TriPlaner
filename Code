const userChoices = {
    activities: '',
    transportation: ''
};

document.querySelectorAll('.answer').forEach(button => {
    button.addEventListener('click', function() {
        const nextQuestionId = this.getAttribute('data-next');
        const group = this.getAttribute('data-group');
        const choice = this.textContent; 

        
        userChoices[group] = choice;

        
        if (nextQuestionId === 'result') {
            
            displayResult();
        } else {
            
            document.getElementById(`question-${nextQuestionId}`).style.display = 'block';
        }

        
        this.closest('.question').style.display = 'none';
    });
});

function displayResult() {
    
    const resultText = getResultText(userChoices.activities, userChoices.transportation);
    document.getElementById('quiz-result').innerHTML = resultText;
    document.getElementById('quiz-result').style.display = 'block';
}

function getResultText(activitiesChoice, transportationChoice) {
    let resultText = '';

    if (activitiesChoice === 'Outdoor Adventures') {
        if (transportationChoice === 'Renting a Car') {
            resultText = 'Experience the thrill of outdoor exploration with the freedom of a rental car! Begin your adventure at Dogwood Canyon Nature Park, where stunning waterfalls, picturesque bluffs, and wildlife await you along its miles of hiking and biking trails. Next, head to Wolfe Mountain for a heart-pounding ziplining adventure through the treetops, offering exhilarating views of the Ozarks. Finally, venture to Table Rock Lake for a serene kayaking excursion, paddling amidst the tranquil waters surrounded by breathtaking natural beauty. With a rental car, you have the flexibility to discover these outdoor gems at your own pace, ensuring an unforgettable journey into Branson\'s wilderness.';
        } else if (transportationChoice === 'Public Transportation') {
            resultText = 'Embark on an outdoor adventure with the convenience of Branson\'s public transit system! Start your day exploring the rugged beauty of Dogwood Canyon, where cascading waterfalls, limestone bluffs, and pristine streams await. Then, soar through the treetops at Wolfe Mountain on a thrilling ziplining tour, taking in panoramic views of the Ozark Mountains. Finally, unwind with a leisurely kayak trip on Table Rock Lake, surrounded by serene landscapes and abundant wildlife. With easy access to these outdoor attractions via public transportation, you can immerse yourself in nature\'s wonders without the hassle of driving.';
        } else { 
            resultText = 'Indulge your adventurous spirit on foot as you explore Branson\'s outdoor playgrounds! Begin your day with a hike through the scenic trails of Dogwood Canyon, where towering bluffs, pristine waterways, and hidden waterfalls await your discovery. Then, satisfy your craving for adrenaline at Wolfe Mountain, where a series of ziplines offer breathtaking views and heart-pounding thrills. Finally, enjoy a leisurely paddleboarding session on the crystal-clear waters of Table Rock Lake, surrounded by the beauty of the Ozarks. With each step, you\'ll experience the natural wonders of Branson up close and personal, making memories that will last a lifetime.';
        }
    } else if (activitiesChoice === 'Entertainment') {
        if (transportationChoice === 'Renting a Car') {
            resultText = 'Immerse yourself in Branson\'s vibrant entertainment scene with the flexibility of a rental car! Cruise from one spectacular show to the next, starting with the captivating productions at Sight & Sound Theatres, where biblical stories come to life on stage. Then, set sail on the Showboat Branson Belle for an unforgettable dinner cruise featuring live music, comedy, and breathtaking views of Table Rock Lake. With your car as your guide, you can explore the best of Branson\'s entertainment offerings at your leisure, ensuring an unforgettable experience filled with laughter, music, and magic.';
        } else if (transportationChoice === 'Public Transportation') {
            resultText = 'Discover the excitement of Branson\'s entertainment district with the convenience of public transportation! Hop aboard Branson\'s transit system and embark on a journey through the city\'s dazzling array of shows and attractions. Start your day with a visit to the iconic Sight & Sound Theatres, where epic tales from the Bible are brought to life through awe-inspiring productions. Then, hop on a trolley and make your way to the Branson Landing, where live music, shopping, and dining await along the scenic waterfront. With easy access to Branson\'s top entertainment destinations, you can enjoy a hassle-free day of fun and excitement.';
        } else { 
            resultText = 'Experience the vibrant energy of Branson\'s entertainment scene on foot as you explore the city\'s lively theaters, attractions, and dining venues! Start your day with a stroll along the famous Branson Strip, where neon lights and bustling crowds set the stage for a day of excitement. Stop by Sight & Sound Theatres for a captivating theatrical performance, then wander down to the Branson Landing for a leisurely lunch by the water. As the sun sets, head to the Historic Downtown District, where live music and street performers add to the city\'s lively atmosphere. With each step, you\'ll discover new sights, sounds, and experiences, making memories that will last a lifetime.';
        }
    } else if (activitiesChoice === 'Culinary Delights') {
        if (transportationChoice === 'Renting a Car') {
            resultText = 'Embark on a culinary adventure through Branson\'s diverse dining scene with the freedom of a rental car! Begin your gastronomic journey at Branson Landing, where waterfront restaurants offer scenic views and delicious fare ranging from fresh seafood to authentic barbecue. Then, head to the heart of the Ozarks and indulge in farm-to-table cuisine at The Keeter Center, where every dish is prepared with locally sourced ingredients and served with Southern hospitality. With your car as your guide, you can savor the flavors of Branson at your own pace, discovering hidden gems and local favorites along the way.';
        } else if (transportationChoice === 'Public Transportation') {
            resultText = 'Savor the flavors of Branson stress-free with the convenience of public transportation! Start your culinary journey at Branson Landing, where a variety of waterfront restaurants offer everything from gourmet burgers to farm-fresh salads. Then, hop on a trolley and make your way to Historic Downtown Branson, where cozy cafes and family-owned eateries serve up hearty comfort food and mouthwatering desserts. With easy access to Branson\'s top dining destinations, you can indulge in a culinary adventure without the hassle of driving.';
        } else { 
            resultText = 'Discover Branson\'s culinary treasures on a leisurely walk through the city\'s charming neighborhoods and bustling districts! Start your day with a stroll along the scenic boardwalk at Branson Landing, where waterfront restaurants offer picturesque views and delicious cuisine. Then, wander through Historic Downtown Branson, stopping at quaint cafes and local eateries to sample homemade treats and regional specialties. As the sun sets, head to the Branson Strip, where neon lights and lively crowds create the perfect backdrop for a night of dining and entertainment. With each step, you\'ll discover new flavors and experiences, making your culinary journey through Branson a truly unforgettable one.';
        }
    } else if (activitiesChoice === 'Cultural Experiences') {
        if (transportationChoice === 'Renting a Car') {
            resultText = 'Immerse yourself in Branson\'s rich cultural heritage with the freedom of a rental car! Start your journey at the Titanic Museum, where interactive exhibits and artifacts offer a fascinating glimpse into the world\'s most famous ocean liner. Then, venture to the Branson Scenic Railway and embark on a scenic journey through the Ozark Mountains, where breathtaking views and historic landmarks await around every curve. With your car as your guide, you can explore Branson\'s cultural landmarks at your own pace, uncovering stories and traditions that have shaped the city for generations.';
        } else if (transportationChoice === 'Public Transportation') {
            resultText = 'Discover Branson\'s cultural landmarks with ease on public transportation! Start your day at the Titanic Museum, where you\'ll embark on a journey through history with interactive exhibits and artifacts from the legendary ocean liner. Then, hop on a trolley and make your way to the Branson Scenic Railway, where a scenic journey through the Ozarks awaits, offering breathtaking views and historic landmarks along the way. With convenient access to Branson\'s top cultural attractions, you can immerse yourself in the city\'s rich heritage without the hassle of driving.';
        } else { 
            resultText = 'Stroll through the cultural heart of Branson, from historic sites to scenic views, and connect with the citys heritage one step at a time. Wander through museums, monuments, and galleries, absorbing the rich tapestry of Bransons cultural landscape on foot. Explore the immersive exhibits at the Titanic Museum, where you\'ll learn about the tragic story of the ill-fated ship, then take a leisurely walk to the Branson Scenic Railway for a scenic journey through the Ozark Mountains. With each step, you\'ll uncover new stories and traditions that have shaped Branson into the vibrant city it is today.';
        }
    }
    
    return resultText;

}

function calculateBudget() {
    const totalBudget = parseFloat(document.getElementById('totalBudget').value);
    if (isNaN(totalBudget) || totalBudget <= 0) {
        alert('Please enter a valid budget amount.');
        return;
    }

    
    const foodPercent = 0.25; 
    const lodgingPercent = 0.30
    const transportationPercent = 0.21; 
    const activitiesandtoursPercent = 0.13; 
    const shoppingandsouvenirsPercent = 0.06; 
    const miscellaneousPercent = 0.05;

    const budgetBreakdown = {
        food: totalBudget * foodPercent,
        lodging: totalBudget * lodgingPercent,
        transportation: totalBudget * transportationPercent,
        activitiesandtours: totalBudget * activitiesandtoursPercent,
        shoppingandsouvenirs: totalBudget * shoppingandsouvenirsPercent,
        miscellaneous: totalBudget * miscellaneousPercent
    };

    displayBudgetSuggestions(budgetBreakdown);
}

function displayBudgetSuggestions(budgetBreakdown) {
    const budgetSuggestionsElement = document.getElementById('budgetSuggestions');
    budgetSuggestionsElement.innerHTML = `
        <h4>Budget Breakdown:</h4>
        <p>Food: $${budgetBreakdown.food.toFixed(2)}</p>
        <p>Lodging: $${budgetBreakdown.lodging.toFixed(2)}</p>
        <p>Transportation: $${budgetBreakdown.transportation.toFixed(2)}</p>
        <p>Activies & Tours: $${budgetBreakdown.activitiesandtours.toFixed(2)}</p>
        <p>Shopping & Souvenirs: $${budgetBreakdown.shoppingandsouvenirs.toFixed(2)}</p>
        <p>Miscellenous: $${budgetBreakdown.miscellaneous.toFixed(2)}</p>
    `;
}
